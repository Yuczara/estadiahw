<%- include('templates/cabeceraAdmin.ejs') %>
    <div class="row mt-1"
        style="display: flex; align-items: center; align-content: center; text-align: center; text-decoration: underline;">
        <h1 class="display-2 mt-3 mb-5">Applicants</h1>
    </div>
    <div class="row mt-3 mb-3"
    style="display: flex; align-items: center; align-content: center; text-align: center;">
        <div class="container">
            <div class="d-grid gap-2 col-6 mx-auto">
                <a type="button" class="btn btn-outline-secondary btn-lg" href="/exportar">Exportar datos de los aspirantes</a>
              </div>
        </div>
    </div>

    </div>
    <div class="container-fluid ml-3 mr-3"
        style="display: flex; align-items: center; align-content: center; text-align: center;">
        <table class="table table-dark table-hover" style="width: 100%; text-align: center;">
            <thead>
                <tr>
                    <th scope="col" style="width: 2rem;">id</th>
                    <th scope="col">Name</th>
                    <th scope="col" style="width: 2rem;">Age</th>
                    <th scope="col">About</th>
                    <th scope="col">Speciality</th>
                    <th scope="col">English</th>
                    <th scope="col">Achievements</th>
                    <th scope="col">Email</th>
                    <th scope="col" style="width: 6rem;">Telephone</th>
                    <th scope="col">Address</th>
                </tr>
            </thead>
            <tbody>
                <% var i=1; usuarios.forEach(user=> { %>
                    <tr>
                        <th scope="row">
                            <%=i%>
                        </th>
                        <td>
                            <%=user.name%>
                                <%=user.lastname%>
                        </td>
                        <td>
                            <%=user.age%>
                        </td>
                        <td>
                            <%=user.about%>
                        </td>
                        <td>
                            <%=user.speciality%>
                        </td>
                        <td>
                            <%=user.english%>
                        </td>
                        <td>
                            <%=user.achievements%>
                        </td>
                        <td>
                            <%=user.email%>
                        </td>
                        <td>
                            <%=user.telephone%>
                        </td>
                        <td>
                            <%=user.address%>
                        </td>

                    </tr>
                    <% i++; }); %>
            </tbody>
        </table>
    </div>
    </body>

    </html>